void HAL_GPIO_EXTI_Callback(uint16_t GPIO_Pin)
{
  if(GPIO_Pin == GPIO_PIN_7){
	  GPIO_WritePin(GPIOA, GPIO_PIN_1, GPIO_STATE_HIGH);
  }
